<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:id="@+id/evenement_layout"
    >

    <ImageView
        android:id="@+id/icon_evenement"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:background="#AAA" />
<!--    android:src="@drawable/icone_evenement" /> -->

    <TextView
        android:id="@+id/evenement_titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/icon_evenement"
        android:layout_alignTop="@+id/icon_evenement"
        android:textStyle="bold"
        tools:text="Evénement exemple"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/evenement_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_alignLeft="@+id/evenement_titre"
        android:layout_below="@+id/evenement_titre"
        tools:text="Date de l'événement"
        android:textSize="18sp" />


</RelativeLayout>