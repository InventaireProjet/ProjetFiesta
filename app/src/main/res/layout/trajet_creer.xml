<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.androidprojects.projetfiesta.CreerTrajet">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nom" android:layout_gravity="center_horizontal" android:hint="Nom du conducteur"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prenom" android:layout_gravity="center_horizontal" android:hint="PrÃ©nom" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/dateNaissance" android:layout_gravity="center_horizontal" android:hint="Date de naissance"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/email" android:layout_gravity="center_horizontal" android:hint="E-mail"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/motPasse"  android:layout_gravity="center_horizontal"  android:hint="Mot de passe"
            android:inputType="textEmailAddress" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/destination"  android:layout_gravity="center_horizontal"  android:hint="Destination"
            android:inputType="textEmailAddress" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nbPlaces"  android:layout_gravity="center_horizontal"  android:hint="Nombre de places"
            android:inputType="textEmailAddress" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/heure"  android:layout_gravity="center_horizontal"  android:hint="Heure (environ)"
            android:inputType="textEmailAddress" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Add"
            android:onClick="insert"
            android:id="@+id/button" android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>

