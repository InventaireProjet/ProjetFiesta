<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="android:textColor">@color/blanc</item>
        <item name="android:colorBackground">@color/couleur_fond</item>

        <item name="android:windowAnimationStyle">@null</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="LegendesCreerTrajet"  parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EntreesCreerTrajet" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">bottom|right</item>
        <item name="android:textSize">@dimen/texte_grand</item>
        <item name="android:background">@null</item>
    </style>

    <style name="LignesLinearLayoutCreerTrajet" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/hauteur_ligne</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LigneSeparation" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ligne_epaisseur</item>
        <item name="android:background">@color/blanc</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

</resources>
